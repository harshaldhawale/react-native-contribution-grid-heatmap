{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"]
}
